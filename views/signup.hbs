<div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle" style="width: 250px;">

        <h2>Create Your Account</h2>

        <form class="uk-panel uk-panel-box uk-form" method="post" action="/member/register">
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" name="firstName" placeholder="First name">
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" name="lastName" placeholder="Last name">
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="email" name="email" placeholder="Email">
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="password" name="password" placeholder="Password">
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="password" name="confirmPassword" placeholder="Confirm Password">
            </div>
            <div class="uk-form-row">
                <button type="submit" class="uk-width-1-1 uk-button uk-button-primary uk-button-large">Create Account</button>
            </div>
            <div class="uk-form-row uk-text-medium">
                <a class="uk-float-left uk-link uk-link-muted" href="/">Back Home</a>
                <a class="uk-float-right uk-link uk-link-muted" href="/signin">Sign In</a>
            </div>
        </form>

    </div>
</div>